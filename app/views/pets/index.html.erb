<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %><br/>

<h4>&emsp;*<%= link_to "Start an Application", "/applications/new " %>*</h4>

<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>&emsp;Age: <%= pet.age %></p>
  <p>&emsp;Breed: <%= pet.breed %></p>
  <p>&emsp;Adoptable: <%= pet.adoptable %></p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p><br/>
<% end %>
